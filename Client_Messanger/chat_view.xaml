<Page x:Class="Client_Messanger.chat_view"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client_Messanger"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="chat_view">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Список чатів -->
            <ColumnDefinition Width="*"/>
            <!-- Основне вікно -->
        </Grid.ColumnDefinitions>

        <!-- Ліва частина — список чатів -->
        <Border Background="#ffffff" BorderBrush="#ddd" BorderThickness="0,0,1,0">
            <StackPanel>
                <TextBlock Text="Чати" FontSize="18" FontWeight="Bold" Margin="10"/>
                <ListBox Name="ChatListBox" Margin="10" Background="Transparent"
                         BorderThickness="0"
                         SelectionChanged="ChatListBox_SelectionChanged">
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Права частина — чат -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Назва чату -->
                <RowDefinition Height="*"/>
                <!-- Повідомлення -->
                <RowDefinition Height="Auto"/>
                <!-- Ввід -->
            </Grid.RowDefinitions>

            <!-- Назва чату -->
            <Border Grid.Row="0" Background="#ffffff" BorderBrush="#ddd" BorderThickness="0,0,0,1">
                <TextBlock Name="ChatTitle"
                           Text="Оберіть чат"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Padding="10"/>
            </Border>

            <!-- Повідомлення -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#e5e5e5">
                <StackPanel Name="MessagesPanel" Margin="10"/>
            </ScrollViewer>

            <!-- Поле вводу -->
            <Border Grid.Row="2" BorderThickness="1,1,0,0" BorderBrush="#ccc" Background="White" Padding="10">
                <DockPanel>
                    <TextBox Name="MessageInput"
                             FontSize="14"
                             Padding="10"
                             Margin="0,0,10,0"
                             VerticalAlignment="Center"
                             BorderBrush="#cccccc"
                             BorderThickness="1"
                             Background="White"
                             Height="40"
                             DockPanel.Dock="Left"
                             HorizontalAlignment="Stretch"
                             MinWidth="480"
                             TextWrapping="Wrap"
                             VerticalContentAlignment="Center" />

                    <Button Name="SendButton"
                            Content="➤"
                            Width="40"
                            Height="40"
                            Background="#0078D7"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                            Click="SendBtn"/>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
